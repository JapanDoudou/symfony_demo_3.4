{{ form_start(form, {method: 'POST', action: path('answer_new', {'commentId': comment.id})}) }}

<fieldset>
    <legend>
        <i class="fa fa-comment" aria-hidden="true"></i> Answer to {{comment.author.fullname}}
    </legend>

    {{ form_errors(form) }}

    <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">

        {{ form_errors(form.content) }}

        {{ form_widget(form.content) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">
            <i class="fa fa-paper-plane" aria-hidden="true"></i> {{ 'action.publish_answer'|trans }}
        </button>
    </div>
</fieldset>
{{ form_end(form) }}